<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Galeria del artista', css: 'specialgallery-style.css'}) %>
<body>
    <div class="hero">
        <%- include('partials/header') %>
    </div>

    
    <main class="main-gallery grilla-padre">

        <aside class="izquierda col s12 m4 l3 main-aside center-align">
        <div class="fixeado">
            <div class="section perfil-artista">
                <h4><%= artista.username %> </h4>
                <img class="responsive-img" src="\images\users\<%= artista.avatar%>">
                <h6><%= artista.name %> <%= artista.lastName %> </h6>
            </div>
            <div class="divider"></div>
            <div class="section contacto">
                <p><%= artista.email %> </p>
            </div>
            <div class="divider"></div>
            <div class="section ranking">
                <p><%= artista.averageScore %></p>
                <p>Obras publicadas</p>
                <p>vendidos</p>
            </div>
            <div class="section row center-align envios">
                <div class="col s4">
                    <!-- Promo Content 1 goes here -->
                    <% if (artista.mailShipping == 1){ %>
                        <i class="material-icon valign-wrapper">
                            local_shipping
                        </i>
                    <% } %>
                </div>
                <div class="col s4">
                    <!-- Promo Content 2 goes here -->
                    <% if (artista.privateShipping == 1){ %>
                    <i class="material-icon valign-wrapper">
                        motorcycle
                    </i>
                    <% } %>
                </div>
                <div class="col s4">
                    <!-- Promo Content 3 goes here -->
                    <% if (artista.noShipping == 1){ %>
                    <i class="material-icon valign-wrapper">
                        home
                    </i>
                    <% } %>
                </div>
            </div>
        </div>
        </aside>

        <div class="col s12 m8 l9 container derecha">

        
            <div class="section">
            <div class="divider"></div>
            </div>
            <div class="gallery-products row">

                <%for (let cuadro of artista.products) { %>
                

                <div class="carta-producto col s12 m6 l4">
                    <div class="contenido-carta">              
                        <div class="imagen">
                            <a href="/product/<%=cuadro.id%>">
                                <!--cuadro.productImages[0].filename-->
                                <img class="responsive-img" src="\images\products\<%=cuadro.imageFile%> "                                 
                                    alt="">
                            </a>
                        </div>

                            <div class="por-encima">
                                <p class="precio">$<%=cuadro.price%></p>
                                <a href="#"><i class="material-icons prefix small">local_mall</i></a>
                            </div>
                        
                        <div class="por-debajo">
                            <h6><%=cuadro.name%></h6>
                            <p> - <%=artista.username%> </p>
                        </div>

                    </div>
                </div> 

                <% } %>
    
            </div>

        </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="/js/header-function.js"></script>
    <script src="/js/gallery-function.js"></script>

</body>
</html>