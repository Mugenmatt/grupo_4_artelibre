<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Galeria', css: 'gallery-style.css', labs: 'labs.css'}) %>
<body>
    <div class="hero">
        <%- include('partials/header') %>
    </div>

    
    <main class="main-gallery grilla-padre">

        <aside class="izquierda col s12 m4 l1 main-aside">
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header titulo-desplegable">Artistas
                        <form class="buscador-artistas" autocomplete="off">
                             <div class="autocomplete">
                                 <input id="myInput" type="text" name="myArtist">
                                <label class="label-icon" for="myInput">
                                        <i class="material-icons">search</i>
                                </label>
                             </div>
                        </form>
                        <i class="tiny material-icons prefix flechita right">expand_more</i>
                    </div>
                    <div class="collapsible-body">
                        <ul class="listaArtistas">
                            <% for (let artist of artistas) { %>
                                <li><a href="/gallery/<%=artist.id%>"><%= artist.username %> </a></li>
                            <% }  %> 

                        </ul>
                    </div>
                </li>
                <div class="divider"></div>
            </ul>   
        </aside>

        <div class="col s12 m8 l11 container derecha">

        
            <div class="gallery-title row">
    
                <h3 class="allPictures">Todos los cuadros</h3>
    
                <div class="divider"></div>
            </div>
            <!--<div class="gallery-products row">-->

            <div class="masonry">

                <%for (let cuadro of obras) { %>
                
                    <div class="brick card">
                        <a href="/product/<%=cuadro.id%>">
                            <img src="\images\products\<%=cuadro.imageFile%> " alt="<%=cuadro.name%>"
                                title="<%=cuadro.name%>">
                        </a>
                        <div class="info-cuadro row">

                          <h6 class="titulo-obra"><%=cuadro.name%></h6>
                          <a class="autor teal-text left" href="gallery/<%=cuadro.idUser%>"> - <%=cuadro.user.username%> </a>

                          <form action="/cart" method="POST" class="right">
                              <input type="hidden" name="productId" value="<%= cuadro.id %> ">
                              <button class="btn-flat waves-effect waves-light boton-carrito" type="submit" name="action">
                                  <i class="material-icons prefix medium ">local_mall</i>
                              </button>
                          </form>

                          <p class="precio right teal-text">$ <%=cuadro.price%></p>
                          
                        </div>
                    </div>

                <% } %>
            </div>

        </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="/js/header-function.js"></script>
    <script src="/js/gallery-function.js"></script>

</body>
</html>