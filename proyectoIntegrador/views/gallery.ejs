<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Galeria', css: 'gallery-style.css'}) %>
<body>
    <div class="hero">
        <%- include('partials/header') %>
    </div>

    
    <main class="main-gallery grilla-padre">

        <aside class="izquierda col s12 m4 l3 main-aside">
            <ul class="collapsible">
                <li>
                    <div class="collapsible-header titulo-desplegable">Artistas <i class="tiny material-icons prefix flechita">expand_more</i></div>
                    <div class="collapsible-body">
                        <ul>
                            <% for (let artist of artistas) { %>
                                <li><a href="/gallery/<%=artist.id%>"><%= artist.username %> </a></li>
                            <% }  %> 

                        </ul>
                    </div>
                </li>
                <div class="divider"></div>
                
        </aside>

        <div class="col s12 m8 l9 container derecha">

        
            <div class="gallery-title row">
    
                <h3>Todos los cuadros</h3>
    
                <div class="divider"></div>
            </div>
            <div class="gallery-products row">

                <%for (let cuadro of obras) { %>
                

                <div class="carta-producto col s12 m6 l4">
                    <div class="contenido-carta">              
                        <div class="imagen">
                            <a href="/product/<%=cuadro.id%>">
                                <img class="responsive-img" src="\images\products\<%=cuadro.imageFile%> "                                 
                                    alt="">
                            </a>
                        </div>

                            <div class="por-encima">
                                <p class="precio">$<%=cuadro.price%></p>
                                <form action="/cart" method="POST">
                                    <input type="hidden" name="productId" value="<%= cuadro.id %> ">
                                    <button class="btn-flat waves-effect waves-light" type="submit" name="action">
                                        <i class="material-icons prefix small">local_mall</i>
                                    </button>
                                </form>
                                <!-- <a href="#"><i class="material-icons prefix small">local_mall</i></a> -->
                            </div>
                        
                        <div class="por-debajo">
                            <h6><%=cuadro.name%></h6>
                            <p> - <%=cuadro.user.username%> </p>
                        </div>

                    </div>
                </div> 

                <% } %>
    
            </div>

        </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="/js/header-function.js"></script>
    <script src="/js/gallery-function.js"></script>

</body>
</html>