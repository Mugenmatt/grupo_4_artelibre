            </div>

            <form class="formulario-comentario" action="">
                
                <textarea class="dejarComentario" placeholder="Escribí tu comentario aquí" name="comentario" id=""  rows="5" maxlength="30" ></textarea>
                
                <input class="enviarComentario" type="submit" value="Enviar">
            
            </form>

        </section>

<!-- =========================================================================== -->
<!---------------------------------- SUGERENCIAS ---------------------------------->
<!-- =========================================================================== -->

        <section class="contenedor-sugerencias">

            <div class="caja-titulo-sugerencias">
                <h4 class="titulo-sugerencias">Sugerencias</h4>
            </div>

            <div class="caja-sugerencias-ventas">
                <div class="caja-sugerencia caja-sugerencia1">
                    <img class="img-sugerencia" src="https://images.pexels.com/photos/161154/stained-glass-spiral-circle-pattern-161154.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Sugerencia">
                    <div class="caja-cartel-vendido caja-cartel-vendido1">
                        <p class="texto-vendido">Vendido</p>
                    </div>
                </div>
                <div class="caja-sugerencia caja-sugerencia2">
                    <img class="img-sugerencia" src="https://images.pexels.com/photos/1183992/pexels-photo-1183992.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Sugerencia">
                    <div class="caja-cartel-vendido caja-cartel-vendido2">
                        <p class="texto-vendido">Vendido</p>
                    </div>
                </div>
                <div class="caja-sugerencia caja-sugerencia3">
