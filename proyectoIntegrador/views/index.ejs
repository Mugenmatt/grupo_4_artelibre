    <section class="contenedor-fondo-slider">

        <h3 class="titulo-destacados subtitulo">Los más destacados</h3>

                <div class="container">
                    <div class="row">
                        <div class="col s12">
                            <div class="carousel">
                                <a class="carousel-item" href=""> <img class="carousel-img" src="../images/features/cuadro1.jpg"></a>
                                <a class="carousel-item" href=""> <img class="carousel-img" src="../images/features/cuadro3.jpg"></a>
