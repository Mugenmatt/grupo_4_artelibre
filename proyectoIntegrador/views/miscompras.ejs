<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Mis compras', css: 'miscompras.css'}) %>

<body>
    <div class="hero">
        <%- include('partials/header') %>
    </div>

<main class="todo container">

    <a class="linkprofile" href="/users/profile"><i class="material-icons">navigate_before</i>Volver a mi perfil</a>

        <ul class="collapsible">
             <% for(let order of ordenes) { %>
            <li>
                 <div class="collapsible-header orden-titulo">
                     <p>
                        NÂ° de orden: <%= order.orderNumber  %>
                     </p>
                     <p>
                         <%= new Date(order.createdAt).toLocaleDateString()%>
                     </p>
                     <p>
                         <%= order.total  %>
                     </p>
                 </div>
                 <div class="collapsible-body orden-contenido">
                     <% for (let item of order.cartitems) {%> 
                     <span>
                         <div class="circle responsive-img">
                             <img src="/images/products/<%= item.product.imageFile %> " alt="Imagen"
                                 class="responsive-img" width="100">
                         </div>
                         <h4><%= item.product.name %></h4>
                         <p><%= item.seller.name %></p>
                         <p><%= item.price %></p>

                     </span>
                    <% } %> 
                 </div>
            </li>
            <% } %>
        </ul>

    </div>



</main>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/js/header-function.js"></script>
    <script src="/js/collapsible-function.js"></script>

</body>

</html>