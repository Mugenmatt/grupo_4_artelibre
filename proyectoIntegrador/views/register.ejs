<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Registrate', css: 'register-style.css'}) %>

<body>
    <div class="hero">
        <!--HEADER-->
        <%- include('partials/header') %>
    
    </div>

    <main class="row container">

        
    <h2 class="register-title">COMPLETÁ TUS DATOS</h2>

    <form action="/users/register" id="form" class="col s12 formulario" method="POST">

        <div class="row">
            <div class="input-field col s12 m6">
                <input class="validate campo" id="name" type="text" name="name" 
                <% if (typeof old != "undefined") { %>
                    value="<%= old.name %>" 
                <% } %> >
                <label for="name">Nombre</label>
                <% if(typeof errors != "undefined"){ %>
                    <% if(typeof errors.name != "undefined"){ %>
                    <span class="helper-text"><%= errors.name.msg  %> </span>
                    <% } %>
                <% } %>
            </div>
            <div class="input-field col s12 m6">
                <input class="validate campo" id="lastname" type="text" name="lastname">
                <label for="lastname">Apellido</label>
             </div>
        </div>
        
        <div class="row">
            <div class="input-field col s12">
                <input class="validate campo" id="username" type="text" name="username"
                    <% if (typeof old != "undefined") { %> value="<%= old.username %>" <% } %>>
                <label for="username">Nombre de usuario</label>
                <% if(typeof errors != "undefined"){ %>
                <% if(typeof errors.username != "undefined"){ %>
                <span class="helper-text"><%= errors.username.msg  %> </span>
                <% } %>
                <% } %>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input class="validate campo" id="email" type="text" name="email" <% if (typeof old != "undefined") { %>
                    value="<%= old.email %>" <% } %>>
                <label for="email">E-mail</label>
                <% if(typeof errors != "undefined"){ %>
                <% if(typeof errors.email != "undefined"){ %>
                <span class="helper-text"><%= errors.email.msg  %> </span>
                <% } %>
                <% } %>
            </div>
        </div>
        
        <div class="row">
            <div class="input-field col s12">
                <input class="validate campo" id="password" type="password" name="password"
                    <% if (typeof old != "undefined") { %> value="<%= old.password %>" <% } %>>
                <label for="password">Contraseña</label>
                <% if(typeof errors != "undefined"){ %>
                <% if(typeof errors.password != "undefined"){ %>
                <span class="helper-text"><%= errors.password.msg  %> </span>
                <% } %>
                <% } %>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input class="validate campo" id="password2" type="password" name="password2" 
                <% if (typeof old != "undefined") { %> value="<%= old.password2 %>" <% } %> >
                <label for="password2">Repetí tu contraseña</label>
                <% if(typeof errors != "undefined"){ %>
                <% if(typeof errors.password2 != "undefined"){ %>
                <span class="helper-text"><%= errors.password2.msg  %> </span>
                <% } %>
                <% } %>
            </div>
        </div>

        <div class="switch">
            <label>
                <input type="checkbox" name="rol" value="1">
                <span class="lever"></span>
                Quiero publicar!
            </label>
        </div>
        
        <p>
          <label>
              <input type="checkbox" id="newsletter" checked name="newsletter" />
              <span>Quiero recibir mails</span>
          </label>
        </p>
        <p>
            <label>
                <input type="checkbox" id="terms" checked name="terms" />
                <span>Entiendo los terminos y condiciones</span>
            </label>
        </p>

        <div class="center-align">
            <button class="btn waves-effect waves-light btn-large" style="margin: 2%;" type="submit" name="action">
                Registrarme
            </button>
        </div>

    </form>

    </main>

    
    

    <%- include('partials/footer.ejs') %>

    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/js/header-function.js"></script>

</body>

</html>