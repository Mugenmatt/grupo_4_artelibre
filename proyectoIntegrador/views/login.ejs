<body>

    <div class="hero">
        <!--HEADER-->
        <%- include('partials/header') %>

    </div>

    <div class="container">
        <div class="row card">
            <div class="card-content ">
                <!-- <h2 class="center blue-text">Login Form</h2> -->
                <form method="POST" action="/users/login" class="row s12">
                    <div class="col s12">
                        <div class="input-field">
                            <input class="center" type="text" name="username" id="username"
                                placeholder="Nombre de usuario">
                        </div>
                    </div>
                    <div class="col s12">
                        <div class="input-field">
                            <input class="center" type="password" name="password" id="password" placeholder="Contraseña">
                        </div>
                    </div>
                    <label class="col s12 center">
                        <input type="checkbox" name="recordar">
                        <span>Recordar mi usuario y contraseña</span>
                    </label>
                    <div class="col s12 center">
                        <button type="submit" class="btn btn-large waves-effect waves-light blue">Inicia sesión</button>
                    </div>
                    <h5 class="center">¿No tenés usuario? <a href="/users/register">Registraté</a></h5>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

    <script src="/js/header-function.js"></script>
</body>
</html>