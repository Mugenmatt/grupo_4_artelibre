<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Inicia Sesión', css: 'login-style.css', labs:""}) %>

<body>

    <div class="hero">
        <!--HEADER-->
        <%- include('partials/header') %>

    </div>

    <main class="row container">

                <!-- ERRORES DE LOGUEO COMETIDO POR USUARIO  -->

                <% if(typeof error != 'undefined')  {%>
                    
                    <p style="color:red">Usuario y/o contraseña no coinciden</p>

                <% } %> 

                <!-- <h2 class="center blue-text">Login Form</h2> -->
                <form method="POST" action="/users/login" class="row s12">
                    <div class="row">
                        <div class="col s12 input-field">
                            <input class="center" type="text" name="email" id="email">
                            <label for="email">E-mail</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input class="center" type="password" name="password" id="password">
                            <label for="password">Contraseña</label>
                        </div>
                    </div>
                    <label class="col s12 center">
                        <input type="checkbox" name="recordar">
                        <span>Recordar mi usuario y contraseña</span>
                    </label>
                    <div class="col s12 center">
                        <button type="submit" class="btn btn-large waves-effect waves-light">Inicia sesión</button>
                    </div>
                    <h5 class="center">¿No tenés usuario? <a class="teal-text text-lighten-2" href="/users/register">Registraté</a></h5>
                </form>
            </main>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="/js/header-function.js"></script>
</body>
</html>